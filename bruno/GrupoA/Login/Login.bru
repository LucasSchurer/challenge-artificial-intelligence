meta {
  name: Login
  type: http
  seq: 5
}

post {
  url: {{host}}/user/login
  body: json
  auth: inherit
}

body:json {
  {
    "username": "{{username}}",
    "password": "{{password}}"  
  }
}

script:post-response {
  bru.setVar("token", res.body.token)
}

settings {
  encodeUrl: true
  timeout: 0
}
